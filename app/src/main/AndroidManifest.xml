<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.EyesMemory"
        tools:targetApi="31">

        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask"
            android:exported="false"/>
        <activity
            android:name=".PauseExitActivity"
            android:exported="true" />

        <activity
            android:name=".GameSelectionActivity"
            android:exported="true" />

        <activity
            android:name=".ChooseColorActivity"
            android:exported="true" />

        <activity
            android:name=".OppositeGameActivity"
            android:exported="false" />

        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <activity
            android:name=".MyInformActivity"
            android:exported="false" />

        <activity
            android:name=".ExerciseSelectionActivity"
            android:exported="false">
        </activity>

        <activity
            android:name=".HandsUpMotionCountActivity"
            android:exported="false">
        </activity>

        <activity
            android:name=".LeftHandUpMotionCountActivity"
            android:exported="false">
        </activity>

        <activity
            android:name=".RightHandUpMotionCountActivity"
            android:exported="false">
        </activity>

        <activity
            android:name=".SquatMotionCountActivity"
            android:exported="false">
        </activity>

        <activity
            android:name=".ExerciseEndActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Dialog">
        </activity>

    </application>

</manifest>
