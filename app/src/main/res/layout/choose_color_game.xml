<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".ChooseColorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/blue_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/top_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="13dp"
            android:layout_marginBottom="61dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sand_clock"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/sandclock" />

            <!--시간이 실행 중에 점점 줄어드는 텍스트가 들어가야함 -->
            <LinearLayout
                android:id="@+id/time_view_bar"
                android:layout_width="74dp"
                android:layout_height="26dp"
                android:background="@drawable/gray"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/time_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1:00"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20sp"></TextView>
            </LinearLayout>

            <Space
                android:layout_width="180dp"
                android:layout_height="wrap_content"></Space>

            <ImageView
                android:id="@+id/left_heart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/heart" />

            <ImageView
                android:id="@+id/middle_heart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/heart" />

            <ImageView
                android:id="@+id/right_heart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/heart" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/text_showboard"
            android:layout_width="240dp"
            android:layout_height="190dp"
            android:layout_marginHorizontal="89dp"
            android:layout_marginBottom="37dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/board_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/board" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="61dp"
                android:paddingBottom="61dp">

                <!--게임 실행 중에 바뀌어야 될 텍스트 부분 일단 임시-->
                <TextView
                    android:id="@+id/change_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=" 검정 "
                    android:textAlignment="center"
                    android:textColor="#EC0000"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="120dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <ImageButton
                android:id="@+id/button_left"
                android:layout_width="110dp"
                android:layout_height="179dp"
                android:background="@drawable/selection_button"
                android:focusable="true"
                android:orientation="vertical" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/button_middle"
                android:layout_width="110dp"
                android:layout_height="179dp"
                android:background="@drawable/selection_button"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/button_right"
                android:layout_width="110dp"
                android:layout_height="179dp"
                android:background="@drawable/selection_button"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/below_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="17dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- question button -->
        <ImageButton
            android:id="@+id/question_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:focusable="true"
            android:src="@drawable/question" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- pause button -->
        <ImageButton
            android:id="@+id/pause_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:focusable="true"
            android:src="@drawable/pause" />
    </LinearLayout>
</LinearLayout>