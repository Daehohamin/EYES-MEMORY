<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/r4shssui8ne8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/blue_bar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="12dp"
                android:background="#1C6CC2"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/r8n8ekxjiq68"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="13dp"
                android:layout_marginBottom="61dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sand_clock"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="1dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/sandclock" />

                <!--시간이 실행 중에 점점 줄어드는 텍스트가 들어가야함 -->
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/time_view"
                    android:layout_width="74dp"
                    android:layout_height="26dp"
                    android:background="@drawable/gray"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/r2s69726v0m8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"></LinearLayout>

                <ImageView
                    android:id="@+id/left_heart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/heart" />

                <ImageView
                    android:id="@+id/middle_heart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/heart" />

                <ImageView
                    android:id="@+id/right_heart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/heart" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/text_showboard"
                android:layout_width="240dp"
                android:layout_height="190dp"
                android:layout_marginHorizontal="89dp"
                android:layout_marginBottom="37dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/board_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/board" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="61dp"
                    android:paddingBottom="61dp">

                    <!--게임 실행 중에 바뀌어야 될 텍스트 부분 일단 임시-->
                    <TextView
                        android:id="@+id/change_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:text=" 검정 "
                        android:textColor="#EC0000"
                        android:textSize="40sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/linear_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="120dp"
                android:orientation="horizontal">

                <!-- blue button -->
                <LinearLayout
                    android:id="@+id/blue_button"
                    android:layout_width="110dp"
                    android:layout_height="179dp"
                    android:background="@drawable/blue"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onBlueClick" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- red button -->
                <LinearLayout
                    android:id="@+id/red_button"
                    android:layout_width="110dp"
                    android:layout_height="179dp"
                    android:background="@drawable/red"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onRedClick" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- black button -->
                <LinearLayout
                    android:id="@+id/black_button"
                    android:layout_width="110dp"
                    android:layout_height="179dp"
                    android:background="@drawable/black"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onBlackClick" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rj3u7ql2bor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="17dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- question button -->
                <ImageView
                    android:id="@+id/question_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/question"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onQuestionClick" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- pause button -->
                <ImageView
                    android:id="@+id/pause_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/pause"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onPauseClick" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>